#Программа переводит арабские числа в римские#
def arab_to_roman(N):
        Nstring = '000' + str(N)
        number = ''

        ROMAN = [['', 'M', 'MM', 'MMM', '', '', '', '', '', ''],
             ['', 'C', 'CC', 'CCC', 'CD', 'D', 'DC', 'DCC', 'DCCC', 'CM'],
             ['', 'X', 'XX', 'XXX', 'XL', 'L', 'LX', 'LXX', 'LXXX', 'XC'],
             ['', 'I', 'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX']]

        for i in range(1,5):
            number = number + ROMAN[i-1][int(Nstring[len(Nstring) - (5-i)])]
        return(number)
